@model B_KOM_Sklep_internetowy.Models.MainCategory

<h4 class="border-bottom pb-1">Dodaj główną kategorię</h4>

@if (TempData["MCSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MCSuccess"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["MCImage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MCImage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("AddMainCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <table>
        <tr>
            <td>
                @Html.LabelFor(c => c.Name, "Nazwa głównej kategorii: ")
            </td>
            <td>
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                <div class="validation-message">
                    @Html.ValidationMessageFor(c => c.Name)
                </div>
            </td>
        </tr>
        <tr>
            <td>Zdjęcie kategorii: </td>
            <td>
                <input type="file" name="mainCategoryImg" />
            </td>
        </tr>
    </table>
    <input type="submit" class="btn btn-primary rounded-button" value="Dodaj" />

}