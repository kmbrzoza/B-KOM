@using Microsoft.AspNet.Identity
@using B_KOM_Sklep_internetowy.Infrastructure

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row m-0 p-0 pt-4 pb-2">
    <div class="col-12 col-md-3 m-0 p-0 border-right">
        <div>
            <span class="pl-2">Cześć</span>
            <h4 class="pl-2">@User.Identity.GetUserName()</h4>

            <a href="@Url.Action("AccountSettings", "Manage")" class="manage-left-button w-100">
                @Html.Raw(HtmlImages.accountIcon)
                Twoje konto
            </a>
            <a href="@Url.Action("OrdersList", "Manage")" class="manage-left-button w-100">
                @Html.Raw(HtmlImages.orderList)
                Zamówienia
            </a>
            <a href="" class="manage-left-button w-100">
                @Html.Raw(HtmlImages.favouriteIcon)Ulubione
            </a>
        </div>
    </div>

    @RenderBody()

</div>