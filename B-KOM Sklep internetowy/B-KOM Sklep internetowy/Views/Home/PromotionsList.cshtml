@model List<B_KOM_Sklep_internetowy.Models.Promotion>
@using B_KOM_Sklep_internetowy.Infrastructure
@{
    ViewBag.Title = "Wszystkie promocje";
}

<div class="m-0 p-0 py-2">
    <div class="m-0 p-0 pb-2">
        <ol class="breadcrumb m-0 p-0 bg-white">
            <li class="breadcrumb-item"><a href="@Url.Content("~/")">B-KOM</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("PromotionsList", "Home")">Wszystkie promocje</a></li>
        </ol>
    </div>

    <div class="text-center">
        @if (Model.Any())
        {
            foreach (var promo in Model)
            {
                <div class="m-0 p-0 py-2">
                    <a href="@Url.Action("Promotions", "Home", new { id = promo.PromotionId })" class="link-none">
                        <img src="@Url.PromotionImgPath(promo.ImgPath)" class="img-fluid promotion-img" />
                        <h2>@promo.Name</h2>
                    </a>
                </div>
            }
        }
        else
        {
            <h2>Aktualnie brak jakichkolwiek promocji!</h2>
        }
    </div>

</div>