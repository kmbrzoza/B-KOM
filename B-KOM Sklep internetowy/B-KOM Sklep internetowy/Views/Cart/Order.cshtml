@model B_KOM_Sklep_internetowy.Models.Order
@{
    ViewBag.Title = "Zamówienie";
}

<h2 class="pt-2">Zamówienie</h2>

@using (Html.BeginForm("Order", "Cart"))
{
    <table id="order-table" class="justify-content-center d-flex">
        <tr>
            <td>@Html.LabelFor(c => c.FirstName, "Imię:")</td>
            <td>@Html.TextBoxFor(c => c.FirstName, new { @class = "form-control"})</td>
            <td>@Html.ValidationMessageFor(c => c.FirstName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.LastName, "Nazwisko:")</td>
            <td>@Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.LastName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.Address, "Adres:")</td>
            <td>@Html.TextBoxFor(c => c.Address, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.Address)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.City, "Miasto:")</td>
            <td>@Html.TextBoxFor(c => c.City, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.City)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.PostCode, "Kod pocztowy:")</td>
            <td>@Html.TextBoxFor(c => c.PostCode, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.PostCode)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.Phone, "Numer telefonu:")</td>
            <td>@Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.Phone)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.Email, "Adres e-mail:")</td>
            <td>@Html.TextBoxFor(c => c.Email, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(c => c.Email)</td>
        </tr>
        <tr>
            <td><label>Uwagi do zamówienia:</label></td>
            <td>
                <textarea class="form-control" name="comment" cols="25" rows="4">@Model.Comment</textarea>
            </td>
        </tr>
    </table>

    @Html.ValidationSummary()

    <div class="justify-content-around d-flex">
        <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary rounded-button">Wróć</a>
        <input class="btn btn-success rounded-button" value="Potwierdź" type="submit"/>
    </div>

}
